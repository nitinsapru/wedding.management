name: CI-github-pr-workitem-validator
on: [pull_request]

jobs:
  label:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pull-requests: write
    steps:
    - name: Get PR context
      id: pr-context
      run: |
        Write-Host "PR# ${{ github.event.pull_request.number }}"
      shell: pwsh
